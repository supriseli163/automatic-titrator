<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="41dp"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/conversion_item_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_cut"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/fontWhite"
            android:layout_marginLeft="20dp"
            android:text="y = "/>
        <EditText
            android:id="@+id/conversion_item_p5"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:inputType="numberDecimal|numberSigned"
            android:imeOptions="actionDone"
            android:textAlignment="center"
            android:textColor="@color/fontWhite"
            android:background="@drawable/edit_text_white"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@color/fontWhite"
            android:text="@string/x5"/>
        <EditText
            android:id="@+id/conversion_item_p4"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:inputType="numberDecimal|numberSigned"
            android:imeOptions="actionDone"
            android:textAlignment="center"
            android:textColor="@color/fontWhite"
            android:background="@drawable/edit_text_white"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@color/fontWhite"
            android:text="@string/x4"/>
        <EditText
            android:id="@+id/conversion_item_p3"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:inputType="numberDecimal|numberSigned"
            android:imeOptions="actionDone"
            android:textAlignment="center"
            android:textColor="@color/fontWhite"
            android:background="@drawable/edit_text_white"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@color/fontWhite"
            android:text="@string/x3"/>
        <EditText
            android:id="@+id/conversion_item_p2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:inputType="numberDecimal|numberSigned"
            android:imeOptions="actionDone"
            android:textAlignment="center"
            android:textColor="@color/fontWhite"
            android:background="@drawable/edit_text_white"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@color/fontWhite"
            android:text="@string/x2"/>
        <EditText
            android:id="@+id/conversion_item_p1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:inputType="numberDecimal|numberSigned"
            android:imeOptions="actionDone"
            android:textAlignment="center"
            android:textColor="@color/fontWhite"
            android:background="@drawable/edit_text_white"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@color/fontWhite"
            android:text="@string/x1"/>
        <EditText
            android:id="@+id/conversion_item_p0"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:inputType="numberDecimal|numberSigned"
            android:imeOptions="actionDone"
            android:textAlignment="center"
            android:textColor="@color/fontWhite"
            android:background="@drawable/edit_text_white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/conversion_item_start"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:inputType="numberDecimal|numberSigned"
            android:imeOptions="actionDone"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:textColor="@color/fontWhite"
            android:background="@drawable/edit_text_white"
            android:textSize="14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/fontWhite"
            android:text="@string/range"/>
        <EditText
            android:id="@+id/conversion_item_end"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:inputType="numberDecimal|numberSigned"
            android:imeOptions="actionDone"
            android:textAlignment="center"
            android:textColor="@color/fontWhite"
            android:background="@drawable/edit_text_white"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B7B7B7" />
</LinearLayout>
