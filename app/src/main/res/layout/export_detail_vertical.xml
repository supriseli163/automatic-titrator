<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="100px"
    android:orientation="vertical">

    <TextView
        android:id="@+id/export_dv_title1"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:gravity="center_vertical"
        android:textColor="@color/fontBlack1"
        android:textSize="48px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/export_dv_title2"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:gravity="center_vertical"
        android:textColor="@color/fontBlack1"
        android:textSize="44px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/export_dv_title3"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center_vertical"
        android:textColor="@color/fontBlack1"
        android:textSize="40px"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260px"
        android:paddingTop="20px"
        android:orientation="vertical">
        <TextView
            android:id="@+id/export_dv_date"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:textSize="32px"
            android:textColor="@color/fontBlack1"/>

        <TextView
            android:id="@+id/export_dv_time"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:textSize="32px"
            android:textColor="@color/fontBlack1"/>

        <TextView
            android:id="@+id/export_dv_creator"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:textSize="32px"
            android:textColor="@color/fontBlack1"/>

        <TextView
            android:id="@+id/export_dv_autograph"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:textSize="32px"
            android:textColor="@color/fontBlack1"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:gravity="center"
        android:text="@string/seperate_line"
        android:textColor="@color/fontBlack"
        android:textSize="32px"/>
    <ListView
        android:id="@+id/export_dv_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
