<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray1"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/test_count"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="36dp">
                    <TextView
                        android:id="@+id/setting_method_detail_testcount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:backgroundTint="@color/colorGray"
                        android:entries="@array/number_1_10"
                        android:inputType="text">
                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/accuracy"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="36dp">
                    <TextView
                        android:id="@+id/setting_method_detail_accuracy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:backgroundTint="@color/colorGray"
                        android:entries="@array/test_accuracy"
                        android:inputType="text">
                    </TextView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/result_type"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="36dp">
                    <TextView
                        android:id="@+id/setting_method_detail_resulttype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:backgroundTint="@color/colorGray"
                        android:entries="@array/test_result_type"
                        android:inputType="text">
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/wavelength"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="36dp">
                    <TextView
                        android:id="@+id/setting_method_detail_wavelength"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:backgroundTint="@color/colorGray"
                        android:inputType="text">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/showdecimals"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="36dp">
                    <TextView
                        android:id="@+id/setting_method_detail_showdecimals"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:backgroundTint="@color/colorGray"
                        android:entries="@array/number_0_9"
                        android:inputType="text">
                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/testtubelength"
                    android:gravity="center_vertical"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/setting_method_detail_testtubelength"
                    android:layout_width="160dp"
                    android:layout_height="36dp"
                    android:inputType="numberDecimal"
                    android:gravity="center_vertical"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/concentration"
                    android:gravity="center_vertical"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/setting_method_detail_specificrotation"
                    android:layout_width="200dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/specificrotation"
                    android:gravity="center_vertical"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/setting_method_detail_concentration"
                    android:layout_width="200dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/atlas"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="x："
                    android:gravity="center_vertical"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="36dp">

                    <TextView
                        android:id="@+id/setting_method_detail_atlasX"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:backgroundTint="@color/colorGray"
                        android:entries="@array/test_atlasX"
                        android:inputType="text"></TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="y："
                    android:gravity="center_vertical"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="36dp">

                    <TextView
                        android:id="@+id/setting_method_detail_atlasY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:backgroundTint="@color/colorGray"
                        android:entries="@array/test_atlasY"
                        android:inputType="text"></TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/temperature"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/setting_method_detail_temperature"
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/setting_method_detail_temperaturetype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:backgroundTint="@color/colorGray"
                        android:entries="@array/temperature_type"
                        android:inputType="text"></TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:text="@string/temperature_use"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/setting_method_detail_usetemperature"
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/autotest"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/setting_method_detail_autotest"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/fontWhite"
                    android:enabled="false"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/autotesttimes"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/setting_method_detail_autotest_times"
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:inputType="number"
                    android:gravity="center_vertical"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:gravity="center_vertical"
                    android:text="@string/autotestinterval"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/setting_method_detail_autotestinterval"
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/fontWhite"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>