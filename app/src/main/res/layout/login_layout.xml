<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/login_password_layout"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_alignParentTop="true"
            android:layout_marginTop="88px"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/login_user_password"
                android:layout_width="match_parent"
                android:layout_height="49px"
                android:background="@drawable/edit_text_null"
                android:hint="@string/password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/black_overlay"
                android:textSize="18px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorSliver" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_button_layout"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_alignParentTop="true"
            android:layout_marginTop="180dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:background="@drawable/login_button"
                android:text="@string/login"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_account_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24px"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/login_user_account"
                    android:layout_width="match_parent"
                    android:layout_height="49px"
                    android:background="@drawable/edit_text_null"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="@string/username"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:textColor="@color/fontBlack"
                    android:textColorHint="@color/black_overlay"
                    android:textSize="18px" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorSliver" />

                <ListView
                    android:id="@+id/login_user_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"></ListView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>