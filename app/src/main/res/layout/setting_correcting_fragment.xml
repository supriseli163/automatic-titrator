<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/JH_f3f3f3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorWrite"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/wavelength_choose"
            android:textColor="@color/fontGray"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/setting_correcting_wavelength"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@color/JH_f3f3f3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/colorWrite"
            android:orientation="vertical">

            //占位
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                //占位
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/automatic_titrator"
                            android:textColor="@color/fontGray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/setting_correcting_test_res"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/fontGray"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/average"
                            android:textColor="@color/fontGray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/setting_correcting_test_avg"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/fontGray"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/temperature"
                            android:textColor="@color/fontGray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/setting_correcting_test_tmp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="0°C"
                            android:textColor="@color/fontGray"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/setting_correcting_first_test"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/first_test"
                            android:textColor="@color/fontGray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/setting_correcting_first_test_tx"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:textColor="@color/fontGray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/setting_correcting_second_test"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/second_test"
                            android:textColor="@color/fontGray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/setting_correcting_second_test_tx"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textColor="@color/fontGray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/setting_correcting_third_test"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="@string/third_test"
                            android:textColor="@color/fontGray"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/setting_correcting_third_test_tx"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textColor="@color/fontGray"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/setting_correcting_test_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/test_btn"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:text="@string/test"
                            android:textColor="@color/fontWhite"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"></LinearLayout>
                    <LinearLayout
                        android:id="@+id/setting_correcting_test_delete_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/del_btn_blue"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:text="@string/clear"
                            android:textColor="@color/fontWhite"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/setting_correcting_test_save_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/save_btn"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:text="@string/save"
                            android:textColor="@color/fontWhite"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/JH_f3f3f3"
                android:layout_weight="6"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/setting_correcting_reload_factory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/goback"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:text="@string/restore_factory_settings"
                        android:textColor="@color/fontWhite"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/JH_f3f3f3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/standard_value"
                    android:textColor="@color/fontGray"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/setting_correcting_standard_value_add"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:imeOptions="actionDone"
                    android:inputType="numberSigned|numberDecimal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/fontGray"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/setting_correcting_standard_value_add_btn"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/blue_button"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add"
                        android:textColor="@color/fontWhite"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/setting_correcting_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/JH_4d6083"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="/"
                        android:textAlignment="center"
                        android:textColor="@color/colorWrite"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWrite" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/standard_value"
                        android:textAlignment="center"
                        android:textColor="@color/colorWrite"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWrite" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/test_result"
                        android:textAlignment="center"
                        android:textColor="@color/colorWrite"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWrite" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/temperature"
                        android:textAlignment="center"
                        android:textColor="@color/colorWrite"
                        android:textSize="14sp" />
                </LinearLayout>

                <ListView
                    android:id="@+id/setting_correcting_lv"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/colorWrite"
                    android:layout_above="@+id/setting_correcting_list_bottom"
                    android:layout_below="@+id/setting_correcting_list_title"></ListView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/JH_f3f3f3">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting_correcting_list_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorWrite"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/setting_correcting_standard_value_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/del_btn_blue"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:text="@string/delete"
                                android:textColor="@color/fontWhite"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/setting_correcting_standard_value_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ok_btn_red"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:text="@string/submit"
                                android:textColor="@color/fontWhite"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>