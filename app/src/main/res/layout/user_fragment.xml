<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="136dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top">

        <LinearLayout
            android:id="@+id/user_setting_layout"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/top_tab_cur"
            android:gravity="center">

            <TextView
                android:id="@+id/user_setting_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="@string/user_setting"
                android:textColor="@color/fontOrange"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_manager_layout"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/top_tab"
            android:gravity="center">

            <TextView
                android:id="@+id/user_manager_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="@string/user_manager"
                android:textColor="@color/fontWhite"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/user_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </FrameLayout>
</LinearLayout>